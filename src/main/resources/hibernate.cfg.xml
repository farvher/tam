<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/tam?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">123456</property>
    <property name="hibernate.show_sql">false</property>
    <property name="hibernate.hbm2ddl.auto">update</property>
    <!-- Enable Hibernate's automatic session context management -->
    <property name="current_session_context_class">thread</property>
    <!-- Disable the second-level cache  -->
    <property name="cache.provider_class">org.hibernate.cache.internal.NoCacheProvider</property>
    <!--<property name="hibernate.connection.autocommit">false</property>-->
    <property name="hibernate.connection.pool_size">10</property>
    <property name="hibernate.connection.autocommit">false</property>
    <mapping class="co.com.tam.domain.Usuarios"/>
    <mapping class="co.com.tam.domain.Ciudades"/>
    <mapping class="co.com.tam.domain.Elementos"/>
    <mapping class="co.com.tam.domain.Estados"/>
    <mapping class="co.com.tam.domain.Fotos"/>
    <mapping class="co.com.tam.domain.Generos"/>
    <mapping class="co.com.tam.domain.Marcas"/>
    <mapping class="co.com.tam.domain.Productos"/>
    <mapping class="co.com.tam.domain.Roles"/>
    <mapping class="co.com.tam.domain.Sucursales"/>
    <mapping class="co.com.tam.domain.Tiendas"/>
    <mapping class="co.com.tam.domain.TipoIdentificaciones"/>
    <mapping class="co.com.tam.domain.UnidadMedidas"/>
    <mapping class="co.com.tam.domain.UsuariosTiendas"/>
  </session-factory>
</hibernate-configuration>
